# NPM Configuration
# This file will be symlinked to ~/.npmrc

# Save exact versions instead of version ranges (^1.0.0 -> 1.0.0)
#save-exact=true

# Use package-lock.json for deterministic installs
#package-lock=true

# Don't save packages to package.json automatically (require explicit --save)
# save=false

# Progress bar during install
progress=true

# Set npm registry (default, but explicit)
registry=https://registry.npmjs.org/

# Optional: Set a default init author
# init-author-name=Franklin Esquivel
# init-author-email=franklin.esquivel@outlook.com
# init-license=MIT

# Performance: Prefer offline mode when possible
prefer-offline=true

# Security: Automatically run audit after install
audit=true
