[init]
	defaultBranch = main

[user]
	name = Franklin Esquivel
	email = franklin.esquivel@outlook.com

[alias]
	# View abbreviated SHA, description, and history graph of the latest 20 commits.
	l = log --pretty=oneline -n 20 --graph --abbrev-commit

	# View the current working tree status using the short format.
	s = status -s

	# Show the diff between the latest commit and the current state.
	d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"

	# Switch to a branch, creating it if necessary.
	go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"

	# Show verbose output about tags, branches or remotes
	tags = tag -l
	branches = branch --all
	remotes = remote --verbose

	# List aliases.
	aliases = config --get-regexp alias

	# Remove branches that have already been merged with main.
	# a.k.a. ‘delete merged’
	dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

	# Show the user email for the current repository.
	whoami = config user.email

[core]
	autocrlf = input

# =============================================================================
# Conditional Includes - Directory-Based Git Identities
# =============================================================================
# These allow you to use different Git identities (name, email, signing keys)
# based on the directory where your repository is located.
#
# HOW IT WORKS:
# - When you run Git commands in a directory matching the "gitdir:" pattern,
#   Git will include the specified config file, overriding settings above.
# - Patterns ending with "/" match all subdirectories recursively
#
# USAGE:
# 1. Create a context config: cp git/.gitconfig.context.template git/.gitconfig.work
# 2. Edit it with your work email/name
# 3. Uncomment or add an includeIf directive below
#
# EXAMPLES:
# Work projects (uncomment and configure as needed):
# [includeIf "gitdir:~/Documents/Dev/work/"]
#	path = ~/.dotfiles/git/.gitconfig.work
#
# Client projects:
# [includeIf "gitdir:~/Documents/Dev/client-name/"]
#	path = ~/.dotfiles/git/.gitconfig.client
#
# Personal projects:
# [includeIf "gitdir:~/Documents/Dev/personal/"]
#	path = ~/.dotfiles/git/.gitconfig.personal
#
# Open source contributions:
# [includeIf "gitdir:~/Documents/Dev/open-source/"]
#	path = ~/.dotfiles/git/.gitconfig.opensource

[includeIf "gitdir:~/Documents/Dev/Projects/ese/"]
	path = ~/.dotfiles/git/.gitconfig.ese

[includeIf "gitdir:~/Documents/Dev/Projects/designli/"]
	path = ~/.dotfiles/git/.gitconfig.designli
